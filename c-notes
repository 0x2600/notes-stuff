4. C 数组
C 传递数组给函数
函数形式参数:
方式 1: void func(int *p)
方式 2: void func(int array[10])
方式 3: void func(int array[])
/*
 * C 从函数返回数组
 */
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
int *getrandom(){
	static int r[10];
	int i;
	srand((unsigned)time(NULL));
	for(i = 0; i<10;i++){
		r[i] = rand();
	}
	return r;
}

int main(){
	int *p = getrandom();
	int i;
	for(i = 0; i<10; i++){
		printf("%d ", *(p++));
	}
	return 0;
}

5. C enum(枚举)
/*
 * 枚举变量
 */
#include <stdio.h>
int main(){

	enum weekday{Mon =1, Tue, Wed, Thu, Fri, Sat, Sun};
	enum weekday day;
	scanf("%d", &day);
	switch(day){
	case Mon: puts("Mon");break;
	}
	return 0;
}

// 整形转为枚举
int i = 1;
enum weekday day = (enum weekday)i;

6. C 指针
C 指针的算术运算
++ -- + - < <= > >= == !=
C 指针数组 int *p[3]
/* 
 * 
 */
#include <stdio.h>
int main(){
	int *p[3];
	int a = 1, b=2, c=3;
	p[0] = &a;
	p[1] = &b;
	p[2] = &c;
	printf("%d %d %d\n", *(p[0]), *(p[1]), *(p[2]));
	return 0;
}

